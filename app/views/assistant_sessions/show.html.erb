<h1 class="text-2xl font-bold mb-4">
  Interview for <%= @session.role %> â€” Question <%= @session.current_question_number %>/25
</h1>

<!-- TIMER BLOCK (Stimulus Controller) -->
<div
  data-controller="timer"
  data-timer-seconds-value="<%= @session.time_left %>"
  class="mb-3 text-lg font-semibold"
>
  Time Left: <span id="timer">--:--</span>
</div>

<!-- Messages container -->
<div id="messages"
     data-controller="autoscroll"
     class="space-y-3 max-h-[70vh] overflow-y-auto p-2 border rounded">
  <%= render @messages %>
</div>

<!-- Message form -->
<%= render "messages/form", session: @session %>
