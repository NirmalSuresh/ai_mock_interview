<div class="container mt-4">
  <h2>Chat #<%= @session.id %></h2>
  <hr>

  <div class="chat-area mb-4" style="min-height: 300px;">
    <% @messages.each do |m| %>
      <p>
        <strong><%= m.role.capitalize %>:</strong>
        <%= m.content %>
      </p>
    <% end %>
  </div>

  <%= form_with url: assistant_session_messages_path(@session),
                method: :post,
                local: true,
                data: { turbo: false } do %>

    <%= text_field_tag :content, nil, class: "form-control" %>
    <%= submit_tag "Send", class: "btn btn-primary mt-2" %>

  <% end %>
</div>
