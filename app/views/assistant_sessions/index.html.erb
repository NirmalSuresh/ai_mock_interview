<div class="container mt-4">
  <h2>Your Interview Sessions</h2>

  <div class="text-end my-3">
    <%= link_to "Start New Interview", new_assistant_session_path, class: "btn btn-primary" %>
  </div>

  <% if @sessions.any? %>
    <div class="list-group">
      <% @sessions.each do |session| %>
        <%= link_to assistant_session_path(session), class: "list-group-item list-group-item-action" do %>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1"><%= session.role %></h5>
              <small>
                Started: <%= session.started_at.strftime("%d %b, %I:%M %p") %>
                |
                Status: <%= session.status.humanize %>
              </small>
            </div>

            <% if session.completed? %>
              <span class="badge bg-success">Completed</span>
            <% else %>
              <span class="badge bg-warning text-dark">In Progress</span>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

  <% else %>
    <p class="text-muted mt-4">No interviews yet. Start one!</p>
  <% end %>
</div>
