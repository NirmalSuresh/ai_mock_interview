<div class="py-4 mb-4"
     style="background: linear-gradient(135deg, #1877f2, #3b82f6); border-radius: 12px;">
  <h1 class="fw-bold text-white text-center mb-0">
    <i class="bi bi-book-fill me-2"></i>
    Prepare
  </h1>

  <p class="text-white-50 text-center mt-2">Your Interview Sessions</p>

</div>

  <div class="text-end my-3">
    <%= link_to "Start New Interview", new_assistant_session_path, class: "btn btn-primary" %>
  </div>

  <% if @sessions.any? %>
    <div class="list-group">
      <% @sessions.each do |session| %>
        <%= link_to assistant_session_path(session), class: "list-group-item list-group-item-action" do %>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1"><%= session.role %></h5>
              <small>
  Started:
  <%= session.started_at.present? ? session.started_at.strftime("%d %b, %I:%M %p") : "Not recorded" %>
  |
  Status: <%= session.status.humanize %>
</small>

            </div>

            <% if session.completed? %>
              <span class="badge bg-success">Completed</span>
            <% else %>
              <span class="badge bg-warning text-dark">In Progress</span>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

  <% else %>
    <p class="text-muted mt-4">No interviews yet. Start one!</p>
  <% end %>
</div>
