<div class="card shadow-lg p-5 mx-auto" style="max-width: 800px;">

  <h1 class="text-center mb-4 fw-bold">Final Interview Report</h1>

  <p class="text-center text-secondary mb-4">
    Role: <strong><%= @session.role %></strong>
  </p>

  <!-- Score -->
  <div class="text-center mb-5">
    <p class="fw-semibold fs-5">Overall Score</p>
    <p class="fw-bold display-4 text-primary">
      <%= @session.total_score || 50 %>/100
    </p>
  </div>

  <!-- Summary -->
  <h4 class="fw-semibold mb-2">Summary</h4>
  <div class="p-3 border rounded bg-light mb-4">
    <%= @session.summary.presence || "No summary generated." %>
  </div>

  <!-- Strengths -->
  <h4 class="fw-semibold mb-2">Strengths</h4>
  <div class="p-3 border rounded bg-success bg-opacity-10 mb-4">
    <%= @session.strengths.presence || "No strengths provided." %>
  </div>

  <!-- Weaknesses -->
  <h4 class="fw-semibold mb-2">Weaknesses</h4>
  <div class="p-3 border rounded bg-danger bg-opacity-10 mb-4">
    <%= @session.weaknesses.presence || "No weaknesses provided." %>
  </div>

  <!-- Answers -->
  <h4 class="fw-semibold mb-3">Your Answers</h4>
  <div class="mb-4">
    <% @session.messages.where(role: "user").each_with_index do |msg, i| %>
      <div class="p-3 border rounded bg-light mb-3">
        <strong>Answer <%= i + 1 %>:</strong>
        <p class="mb-0"><%= msg.content %></p>
      </div>
    <% end %>
  </div>

  <!-- Restart -->
  <div class="text-center mt-4">
    <%= link_to "Start New Interview",
                new_assistant_session_path,
                class: "btn btn-primary btn-lg px-4" %>
  </div>

</div>
