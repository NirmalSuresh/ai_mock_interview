<div class="container mt-4">
  <h2>Start a New Mock Interview</h2>

  <%= form_with url: assistant_sessions_path, local: true do %>
    <div class="form-group">
      <label>Role you are preparing for</label>
      <%= text_field_tag :role,
                         nil,
                         class: "form-control",
                         placeholder: "e.g. Backend Developer" %>
    </div>

    <%= submit_tag "Start Interview", class: "btn btn-success mt-3" %>
  <% end %>
</div>
