<div class="container py-5">

  <!-- Header / Branding -->
  <div class="text-center mb-5">
    <h1 class="fw-bold display-5 d-flex justify-content-center align-items-center">
      <i class="bi bi-book-fill text-primary me-3"></i>
      Prepare
    </h1>
    <p class="text-muted fs-5">Start a New Mock Interview</p>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow p-4 border-0" style="border-radius: 14px;">

        <%= form_with model: @session, url: assistant_sessions_path, method: :post, local: true do |f| %>

          <div class="mb-3">
            <label class="form-label fw-semibold fs-5">Role you are preparing for</label>
            <%= f.text_field :role,
                  placeholder: "e.g. Backend Developer",
                  class: "form-control form-control-lg" %>
          </div>

          <div class="d-grid mt-4">
            <%= f.submit "Start Interview",
                class: "btn btn-primary btn-lg py-3 rounded-3 fw-semibold" %>
          </div>

        <% end %>

      </div>

    </div>
  </div>

</div>
