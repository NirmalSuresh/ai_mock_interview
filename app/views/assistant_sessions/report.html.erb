<div class="container mt-4">
  <h1>Final Interview Report</h1>

  <p><strong>Role:</strong> <%= @session.role %></p>
  <p><strong>Status:</strong> <%= @session.status %></p>

  <hr>

  <h3>Overall Score</h3>
  <p><%= @session.total_score || "Score not available yet." %> / 100</p>

  <h3>Strengths</h3>
  <p><%= @session.strengths || "Strengths will appear here after evaluation." %></p>

  <h3>Weaknesses</h3>
  <p><%= @session.weaknesses || "Weaknesses will appear here after evaluation." %></p>

  <h3>Summary</h3>
  <p><%= @session.summary || "Summary will appear here after evaluation." %></p>

  <hr>

  <h3>Conversation Transcript</h3>
  <div style="background: #fafafa; padding: 1rem; border-radius: 8px;">
    <% @messages.each do |m| %>
      <p>
        <strong><%= m.role.capitalize %>:</strong>
        <%= m.content %>
      </p>
    <% end %>
  </div>

  <%= link_to "Back to all interviews", assistant_sessions_path, class: "btn btn-secondary mt-3" %>
</div>
