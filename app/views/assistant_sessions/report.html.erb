<div class="container mt-4">
  <h2>Final Interview Report</h2>

  <p><strong>Role:</strong> <%= @session.role %></p>

  <p>
    <strong>Total Score:</strong>
    <%= @session.total_score.present? ? @session.total_score : "Pending evaluation" %> / 100
  </p>

  <hr>

  <h3>Strengths</h3>
  <p><%= @session.strengths || "Will be generated by AI." %></p>

  <h3>Weaknesses</h3>
  <p><%= @session.weaknesses || "Will be generated by AI." %></p>

  <h3>Summary</h3>
  <p><%= @session.summary || "Summary will be generated by AI." %></p>

  <%= link_to "Back to Sessions", assistant_sessions_path, class: "btn btn-secondary mt-3" %>
</div>
