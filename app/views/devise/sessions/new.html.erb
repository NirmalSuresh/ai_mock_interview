<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">

  <div class="card shadow-lg p-5" style="max-width: 420px; width: 100%; border-radius: 14px;">

    <!-- App Title -->
    <h1 class="fw-bold text-center mb-4 d-flex justify-content-center align-items-center">
      <i class="bi bi-book-fill text-primary me-2"></i>
      Prepare
    </h1>

    <h4 class="text-center text-muted mb-4">Welcome Back</h4>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs">

        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Email",
                    input_html: {
                      autocomplete: "email",
                      class: "form-control form-control-lg"
                    } %>

        <%= f.input :password,
                    required: true,
                    label: "Password",
                    input_html: {
                      autocomplete: "current-password",
                      class: "form-control form-control-lg"
                    } %>

        <% if devise_mapping.rememberable? %>
          <div class="form-check my-2">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

      </div>

      <div class="mt-4">
        <%= f.button :submit, "Log In",
            class: "btn btn-primary w-100 py-2 fs-5 rounded-3" %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Create an account", new_user_registration_path, class: "text-decoration-none" %>
    </div>

  </div>

</div>
