<div class="container mt-5">
  <h2>Interview Summary</h2>

  <p><strong>Role:</strong> <%= @interview.role %></p>

  <% if @interview.respond_to?(:time_taken) %>
    <p><strong>Time taken:</strong> <%= @interview.time_taken %> seconds</p>
  <% end %>

  <hr>

  <h4>User Answers</h4>
  <ul>
    <% @answers.each do |answer| %>
      <li>
        <strong>Q<%= answer.question_number %>:</strong> <%= answer.content %>
      </li>
    <% end %>
  </ul>

  <hr>

  <h4>AI Feedback</h4>
  <% if @interview.respond_to?(:messages) %>
    <ul>
      <% @interview.messages.where(role: "assistant").each do |m| %>
        <li><%= m.content %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No AI feedback recorded.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Home", root_path, class: "btn btn-primary" %>
  </div>
</div>
