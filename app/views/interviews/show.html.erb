<div class="container mt-5">
  <h2>AI Mock Interview</h2>

  <h4 class="mt-4">Question <%= @question.number %>/25</h4>
  <p class="lead"><%= @question.content %></p>

  <%= form_with url: answer_interview_path(@interview), method: :post, local: true do %>
    <div class="mb-3">
      <%= text_area_tag :answer, nil, class: "form-control", rows: 4, placeholder: "Type your answer here..." %>
    </div>

    <%= submit_tag "Submit Answer", class: "btn btn-primary" %>
  <% end %>
</div>
