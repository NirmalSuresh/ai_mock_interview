<%= turbo_stream.append "messages" do %>
  <%= render @message %>
<% end %>

<% last_msg = @session.messages.order(:created_at).last %>
<% if last_msg.role == "assistant" %>
  <%= turbo_stream.append "messages" do %>
    <%= render last_msg %>
  <% end %>
<% end %>

<%= turbo_stream.replace "message_form" do %>
  <%= render "messages/form", session: @session %>
<% end %>
