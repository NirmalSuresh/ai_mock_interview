<%= turbo_stream.append "messages",
      partial: "messages/message",
      locals: { message: @message } %>

<% if @assistant_msg %>
  <%= turbo_stream.append "messages",
        partial: "messages/message",
        locals: { message: @assistant_msg } %>
<% end %>

<%= turbo_stream.replace "message_form",
      partial: "messages/form",
      locals: { session: @session } %>
