<%= turbo_stream.append "messages" do %>
  <%= render @message %>
<% end %>

<% if @assistant_msg.present? %>
  <%= turbo_stream.append "messages" do %>
    <%= render @assistant_msg %>
  <% end %>
<% end %>

<%= turbo_stream.replace "message_content" do %>
  <%= tag.input type: "text",
                name: "message[content]",
                id: "message_content",
                class: "w-full border p-2 rounded",
                placeholder: "Type your answerâ€¦" %>
<% end %>
