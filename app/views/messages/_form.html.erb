<%= form_with model: [session, Message.new],
              data: { turbo_stream: true },
              html: { multipart: true } do |f| %>

  <div class="mb-2">
    <%= f.text_field :content, placeholder: "Type your message...", class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= f.file_field :attachment, class: "form-control" %>
    <small class="text-muted">Upload image/audio/document (max 5MB)</small>
  </div>

  <%= f.submit "Send", class: "btn btn-primary" %>

<% end %>
