<div id="message_form">
  <%= simple_form_for [session, Message.new],
        html: { multipart: true, id: "new_message_form" },
        data: { turbo: true } do |f| %>

    <div class="d-flex gap-2 align-items-center">

      <%= f.input :content,
        label: false,
        placeholder: "Type your answerâ€¦",
        input_html: { class: "form-control", id: "message_content" } %>

      <%= f.input :file,
        as: :file,
        label: false,
        input_html: { accept: "application/pdf" } %>

      <%= f.button :submit, "Send", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
