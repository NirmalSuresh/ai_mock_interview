<%= form_with model: [session, Message.new], data: { turbo_stream: true }, html: { multipart: true } do |f| %>

  <div class="mb-2">
    <%= f.text_field :content, placeholder: "Type your message (optional)...", class: "form-control w-100" %>
  </div>

  <div class="mb-2">
    <%= f.file_field :attachment, class: "form-control" %>
    <small class="text-muted">You may upload an image, audio, or document (max 5MB).</small>
  </div>

  <%= f.submit "Send", class: "btn btn-primary w-100" %>

<% end %>
